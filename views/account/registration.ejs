<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%-messages()%>
<form action="/">
    <label for="fname">First Name:</label>
    <input type="text" id="fname" name="account_firstname" required>
    <label for="lname">Last Name:</label>
    <input type="text" id="lname" name="account_lastname" required>
    <label for="email">Email:</label>
    <input type="email" id="email" name="account_email" required>
    <label for="pwd">Password:</label>
    <input type="password" id="pwd" name="account_password" required minlength="12">
    <input type="submit" value="Submit">
  </form>