<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%-messages()%>



<form id="loginForm" action="/account/login" method="post">
    <label for="email">Email:</label>
    <input type="email" id="email" name="account_email" required>
    <label for="pwd">Password:</label>
    <input type="password" id="pwd" name="account_password" required>
    <span>Password must contain 1 capital letter, 1 number, 1 special character and be at least 12 characters long.</span>
    <input type="submit" value="Submit" id="submitButton">
  </form>
<p>No account? <a href="/account/register">Sign Up</a></p>
