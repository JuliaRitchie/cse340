<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%-messages()%>
<form action="/account/register" method="post">
    <label for="fname">First Name:</label>
    <input type="text" id="fname" name="account_firstname" required placeholder="John">
    <label for="lname">Last Name:</label>
    <input type="text" id="lname" name="account_lastname" required placeholder="Doe">
    <label for="email">Email:</label>
    <input type="email" id="email" name="account_email" required placeholder="example@email.com">
    <label for="pwd">Password:</label>
    <input type="password" id="pwd" minlength="12" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"> 
    <span>Password must contain 1 capital letter, 1 number, 1 special character and be at least 12 characters long.</span>
    <input type="submit" value="Submit" id="submitButton">
  </form>