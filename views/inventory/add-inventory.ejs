<%# The Content Heading %>
<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="/inv/add-new-inventory" method="post">
  <label for="inv_make">Vehicle Make:</label>
  <span>Only input letters</span>
  <input id="inv_make" type="text" name="inv_make" pattern="^[a-zA-Z0-9]+$" value="<%= locals.inv_make %>" required>
  <label for="inv_model">Vehicle Model:</label>
  <span>Only input letters</span>
  <input id="inv_model" type="text" name="inv_model" pattern="^[a-zA-Z0-9]+$" value="<%= locals.inv_model %>" required>
  <label for="inv_year">Vehicle Year:</label>
  <span>Only put in a 4 digit year. Example: 2009</span>
  <input id="inv_year" type="text" name="inv_year" pattern="^[0-9]{4}$" value="<%= locals.inv_year %>" required>
  <label for="inv_description">Vehicle Description:</label>
  <textarea id="inv_description" type="text" name="inv_description" value="<%= locals.inv_description %>" required>Write the vehicle description here.</textarea>
  <label for="inv_image">Vehicle Image Path:</label>
  <input id="inv_image" type="text" name="inv_image" value="<%= locals.inv_image %>" required>
  <label for="inv_price">Vehicle Price:</label>
  <span>Only input numbers</span>
  <input id="inv_price" type="text" pattern="[0-9]*" name="inv_price" value="<%= locals.inv_price %>" required>
  <label for="inv_miles">Vehicle Miles:</label>
  <span>Only input numbers</span>
  <input id="inv_miles" type="text" pattern="[0-9]*" name="inv_miles" value="<%= locals.inv_miles %>" required>
  <label for="inv_color">Vehicle Color:</label>
  <span>Only input letters</span>
  <input id="inv_color" type="text" name="inv_color" pattern="^[a-zA-Z0-9]+$" value="<%= locals.inv_color %>" required>
  <label for="classification_id">Vehicle Classification:</label>
  <select name="classification_id" id="classification_id">
    <%- classification %>
  </select>
  
  <input type="submit" value="Submit" id="submitButton">
  <input type="hidden" name="inv_id"
<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
<% } %>>
</form>
